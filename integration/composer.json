{
    "name": "open-feature/integration-tests",
    "description": "Integration tests for the OpenFeature SDK",
    "license": "Apache-2.0",
    "type": "library",
    "keywords": [
        "featureflags",
        "featureflagging",
        "openfeature"
    ],
    "authors": [
        {
            "name": "Tom Carrio",
            "email": "tom@carrio.dev"
        }
    ],
    "require": {
        "php": "^8",
        "open-feature/sdk": "^2.0.0",
        "open-feature/flagd-provider": "^0.3.0",
        "guzzlehttp/guzzle": "^7.5",
        "guzzlehttp/psr7": "^2.4"
    },
    "require-dev": {
        "behat/behat": "^3.11",
        "phpunit/phpunit": "^9.5"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../",
            "options": {
                "versions": {
                    "open-feature/sdk": "2.0.0"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "dev:test": [
            "@dev:test:features"
        ],
        "dev:test:features": [
            "@dev:test:features:init",
            "@dev:test:features:setup",
            "@dev:test:features:run"
        ],
        "dev:test:features:init": "git submodule update --recursive",
        "dev:test:features:run": "vendor/bin/behat",
        "dev:test:features:setup": "cp ./test-harness/features/*.feature ./features/",
        "test": "@dev:test"
    }
}
